<?xml version="1.0" encoding= "ISO-8859-1"?>

<!-- Travel Planner Application, Deployment Descriptor File -->
<!-- File for mapping URL patterns to servlet classes -->

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                        http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0"
    metadata-complete="true">
    
    <display-name>Travel Planner Application</display-name>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.travelplanner.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.travelplanner.view.HomeServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>favorite_list</servlet-name>
        <servlet-class>com.travelplanner.controller.FavoriteListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>list_created</servlet-name>
        <servlet-class>com.travelplanner.view.FavoriteListServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>error</servlet-name>
        <servlet-class>com.travelplanner.view.ErrorServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>favorite_list</servlet-name>
        <url-pattern>/save_list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>list_created</servlet-name>
        <url-pattern>/list_created</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    
</web-app>